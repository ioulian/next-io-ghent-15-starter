{
  "name": "next-io-ghent-15-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "postinstall": "husky && patch-package",
    "dev": "next dev --experimental-https --turbopack",
    "analyze": "cross-env ANALYZE=true pnpm build",
    "build": "pnpm check-translations && pnpm check-build-prerequisites && next build",
    "start": "next start",
    "check-types": "tsc --noemit",
    "format-code": "prettier --write .",
    "lint": "pnpm check-types && next lint --fix",
    "check-translations": "ts-node -O '{\"module\":\"commonjs\"}' scripts/check-translations.ts",
    "check-build-prerequisites": "ts-node -O '{\"module\":\"commonjs\"}' scripts/check-build-prerequisites.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "panda codegen && storybook build",
    "test-storybook": "test-storybook",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "lodash": "4.17.21",
    "next": "15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "reset-css": "5.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/env": "15.1.0",
    "@types/lodash": "4.17.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "10.4.20",
    "cssnano": "7.0.6",
    "eslint": "^9",
    "eslint-config-next": "15.1.0",
    "eslint-plugin-i18next": "6.1.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-sonarjs": "3.0.1",
    "husky": "9.1.7",
    "lint-staged": "15.2.11",
    "next-intl": "3.26.1",
    "postcss": "8.4.49",
    "postcss-import": "16.1.0",
    "postcss-nesting": "13.0.1",
    "prettier": "3.4.2",
    "ts-node": "10.9.2",
    "typescript": "^5"
  }
}
